<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4E4E4"
    tools:context=".NavigationViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N.B: Tap 'Search' button to find your nearest subcenter."
            android:textColor="@color/basicDarkColor"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"/>
        <Button
            android:id="@+id/search_nav_btn"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/button_press_effect"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:text="Search"
            android:textStyle="bold"
            android:textSize="17sp"/>
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/navExp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"/>


</LinearLayout>